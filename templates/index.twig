{% extends "base.twig" %}

{% block content %}

<div class="container">
	<div class="row">
		
			{% for post in posts %}
			<div class="col-md-6 post">
					<img class="post-thumbnail" src="{{post.thumbnail.src|resize(800, 500, 'center')}}">
					{% if post.categories %}
					<ul class="post-categories">
						{% for category in post.categories %}
						<li><a href="{{category.link}}">{{category.name}}</a></li>
						{% endfor %}
					</ul>
					{% endif %}
					<h3 class="post-title"><a href="{{post.link}}">{{post.name}}</a></h3>
					<p class="post-preview">{{post.preview.length(20).read_more('')}}</p>
					<a class="special special-right" href="{{post.link}}">Read More</a>
				
			</div>
			{% endfor %}

	
	</div>

	{% if posts.pagination.prev or posts.pagination.next %}
	{% include 'partial/pagination.twig' %}
	{% endif %}
</div>

{% endblock %}
