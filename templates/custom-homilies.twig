{% extends "base.twig" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-8 sidebar-content">
                {% for post in posts %}
                    <div class="post">
                        <h3 class="post-title"><a href="{{post.link}}">{{post.name}}</a></h3>
                        <p class="post-preview">{{post.preview.length(40).read_more('')}}</p>
                        <a class="special special-right" href="{{post.link}}">Read More</a>
                    </div>
                {% endfor %}
            </div>

            <div class="col-lg-3 offset-lg-1 sidebar-sidebar">
                {{sidebar}}
            </div>
        </div>
    </div>

{% endblock %}