{% extends "base.twig" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-8 sidebar-content">
                {% for post in posts %}
                    <div class="post">
                        <h3 class="post-title"><a href="{{post.link}}">{{post.name}}</a></h3>
                    </div>
                {% endfor %}

                {% if posts.pagination.prev or posts.pagination.next %}
			        {% include 'partial/pagination.twig' %}
			    {% endif %}
            </div>

            <div class="col-lg-3 offset-lg-1 sidebar-sidebar">
                {{sidebar}}
            </div>
        </div>
    </div>

{% endblock %}