{% extends "base.twig" %}

{% block content %}

	{% if post.get_field('modules') %}

		{% for module in post.get_field('modules') %}
		
			{% include 'partial/module.twig' ignore missing %}

		{% endfor %}

	{% else %}

		<div class="container">
        	<div class="row">
            	<div class="col-lg-8">
					<div class="module text">
						{{post.content}}
					</div>
				</div>
			</div>
		</div>

	{% endif %}

{% endblock %}