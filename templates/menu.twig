{% if menu %}
	<ul>
	{% if search %}
		<li class="search"><i class="fas fa-search"></i></li>
	{% endif %}
	{% for item in menu %}
		<li class="{{ item.classes | join(' ') }}">
			<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			{% include "menu.twig" with {'menu': item.get_children} %}
	{% endfor %}
	</ul>
{% endif %}