<div class="module overview">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-6 overview-primary">
                <h1>{{module.primary.heading}}</h1>
                {{module.primary.copy}}
                {% set buttons = module.primary.buttons %}
                {% if buttons %}
                    {% include 'partial/buttons.twig' %}
                {% endif %}
            </div>
            <div class="col-md-12 col-lg-5 offset-lg-1 overview-secondary">
                <div class="row">
                    {% for blurb in module.secondary.blurbs %}
                        <div class="col-md-6">
                        <h2 class="h2-{{loop.index}}">{{blurb.heading}}</h2>
                        {{blurb.copy}}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>