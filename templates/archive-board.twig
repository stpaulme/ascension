{% extends "base.twig" %}

{% block content %}

<div class="container">
	<div class="row">
		{% for post in posts %}
            <div class="col-md-4 board">
                {% set photo = post.get_field('photo') %}

                {% if photo %}
                <div class="row">
                    <div class="col-5 col-md-12">
                        <img src="{{TimberImage(photo).src|resize(400,400)}}" />
                    </div>
                </div>
                {% endif %}
				
                <h3>{{post.name}}</h3>
                <p class="position">{{post.position}}</p>
			</div>
		{% endfor %}
    </div>
</div>

{% endblock %}